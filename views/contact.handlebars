    <section class="wrapper">
        <div class="left-wrap"></div>
        <div class="right-wrap"></div>
        <div class="contact-div">
            <div class="header-container">
                <h2>{{msg}}</h2>
                {{#if default}}
                <h3>Get in touch.</h3>
                <p>Want to book me or have some questions? Let's talk!</p>
                {{/if}}
            </div>
            {{#if default}}
            <div class="form-container">
                <h4>Drop me a line.</h4>
                <form action="/contact/sent" method="POST">
                    <label for="name">Your name</label>
                    <input name="name" type="text" placeholder="Please enter your name.">
                    <label for="email">Email</label>
                    <input name="email" type="text" placeholder="Please enter your email.">
                    <label for="subject">Subject</label>
                    <div class="select-container">
                        <select name="subject" id="subject">
                            <option value="Booking a Session">Book Session</option>
                            <option value="Question Inquiry">Have a Question</option>
                            <option value="Other Inquiry">Other</option>
                        </select>
                    </div>
                    <label for="message">Message</label>
                    <textarea name="message" id="message" cols="40" rows="10" placeholder="Please enter your message."></textarea>
                    <input id="submit" type="submit">
                </form>
            </div>
            {{/if}}
        </div>
